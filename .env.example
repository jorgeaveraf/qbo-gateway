# Runtime environment
ENV=sandbox
API_KEY=super-secret-api-key
FERNET_KEY=change-me-with-a-32-byte-base64-key

# QuickBooks application credentials
QBO_CLIENT_ID=your-intuit-client-id
QBO_CLIENT_SECRET=your-intuit-client-secret
QBO_REDIRECT_URI=http://localhost:8000/auth/callback

# Database connection string (Postgres preferred, SQLite allowed for local dev)
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/qbo_gateway

# HTTP client configuration
HTTP_TIMEOUT_SECONDS=30
RETRY_MAX_ATTEMPTS=3
RETRY_MAX_WAIT=15

# API documentation access control
ALLOW_DOCS_WITHOUT_AUTH=true
